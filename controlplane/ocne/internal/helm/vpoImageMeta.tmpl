createNamespace: false
{{- if .Image }}
image: {{.Image}}
{{- end }}
imagePullPolicy: {{.PullPolicy}}
{{- if or (.Image) (.ImagePullSecrets) }}
global:
{{- if .Image }}
  registry: {{.Registry}}
  repository: {{.Repository}}
{{- end }}
{{- if .ImagePullSecrets }}
  imagePullSecrets:
{{- range .ImagePullSecrets }}
    - {{ .Name }}
{{- end }}
{{- end }}
{{- end }}
